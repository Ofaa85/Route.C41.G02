@model Empolyee
@{
    ViewData["Title"] = "Create";
}

<h1>Create New Employee</h1>

<form asp-action="Create">
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger  "></span>

    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger  "></span>

    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger  "></span>

    </div>


    <div class="form-group">
        <label class="col-form-label" asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger  "></span>
    </div>


    <div class="form-group">
        <label class="col-form-label" asp-for="Salary"></label>
        <input asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger  "></span>

    </div>


    <div class="form-group">
        <label class="col-form-label" asp-for="Genderr"></label>
        <input asp-for="Genderr" class="form-control" />
        <span asp-validation-for="Genderr" class="text-danger  "></span>

    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="HiringDate"></label>
        <input asp-for="HiringDate" class="form-control" />
        <span asp-validation-for="HiringDate" class="text-danger  "></span>
    </div>

    <div class="form-group">
        <input asp-for="IsActive" class="form-check-input" />
        <label class="col-form-label" asp-for="IsActive"></label>


    </div>







    <input type="submit" value="Create" class="btn btn-primary" /> |
    <a asp-controller="Department" asp-action="Index" class="btn btn-light">Back To List</a>

</form>

